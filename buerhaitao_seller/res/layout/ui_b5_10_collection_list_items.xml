<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_productPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_alignLeft="@+id/tv_productIntro"
            android:text="￥"
            android:textColor="@color/theme_color" />

        <View
            android:id="@+id/view1"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_kucun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_productPrice1"
            android:layout_alignBottom="@+id/tv_productPrice1"
            android:layout_toLeftOf="@+id/view1"
            android:textSize="12sp"
            android:text="库存 20"
            android:textColor="@color/grey" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/cb_operate"
            android:src="@drawable/buerhaitao" />

        <TextView
            android:id="@+id/tv_productIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/iv_image"
            android:maxLines="12"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_productIntro"
            android:layout_alignTop="@+id/iv_image"
            android:text="产品名称"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/cb_operate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view1" />

        <TextView
            android:id="@+id/tv_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_productIntro"
            android:layout_alignTop="@+id/tv_productIntro"
            android:maxEms="12"  
			android:singleLine="true"  
			android:ellipsize="end" 
            android:text="简介简介简介简介简介简介简介简介" />

        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_productPrice1"
            android:layout_alignBottom="@+id/tv_productPrice1"
            android:layout_toRightOf="@+id/tv_productPrice1"
            android:textColor="@color/theme_color"
            android:text="0" />

        <TextView
            android:id="@+id/tv_zongxiaoliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_productPrice"
            android:layout_toLeftOf="@+id/tv_kucun"
            android:layout_marginRight="5dp"
            android:text="总销量 20"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </RelativeLayout>

    <View 
            android:layout_width="wrap_content"
            android:layout_height="3dp"
        />

</LinearLayout>